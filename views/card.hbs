<h1>
  Корзина
</h1>
<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>
            Название
          </th>
          <th>
            Количество
          </th>
          <th>
            Цена 1 шт
          </th>
          <th>
            Действия
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>
              <b>
                {{title}}
              </b>
            </td>
            <td>
              <b>
                {{count}}
              </b>
            </td>
            <td>
              <b style="font-size: 14px" class="price">
                {{price}}
              </b>
            </td>
            <td>
              <button
                data-csrf="{{@root.csrf}}"
                class="btn btn-small js-remove"
                data-id="{{_id}}"
              >
                Удалить
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>
      <strong>
        Итого:
      </strong>
      <span class="price total-price">
        {{price}}
      </span>
    </p>
    <form action="/orders" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <button class="btn" type="submit">
        Сделать заказ
      </button>
    </form>
  {{else}}
    <p>
      Корзина пустая
    </p>
  {{/if}}
</div>