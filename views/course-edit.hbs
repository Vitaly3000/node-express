<h1>
  Редактировать
  {{course.title}}
</h1>
<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input
      value='{{course.title}}'
      name="title"
      id="title"
      type="text"
      class="validate"
      required
    />
    <label for="title">
      Название
    </label>
    <span class="helper-text" data-error="Введите название">
      Helper text
    </span>
  </div>
  <div class="input-field">
    <input
      value='{{course.price}}'
      name="price"
      id="price"
      type="text"
      class="validate"
      required
      min="10"
    />
    <label for="price">
      ЦЕНА
    </label>
    <span class="helper-text" data-error="Введите цену">
      Helper text
    </span>
  </div>
  <div class="input-field">
    <input
      value="{{course.img}}"
      name="img"
      id="img"
      type="text"
      class="validate"
      required
    />
    <label for="img">
      url картинки
    </label>
    <span class="helper-text" data-error="Введите url-картинки">
      Helper text
    </span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}" />
  <button class="btn btn-primary">
    Редактировать курс
  </button>
</form>