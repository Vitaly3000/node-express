<h1>
  {{title}}
</h1>
{{#if error}}
  <p class="alert">
    {{error}}
  </p>
{{/if}}
<form action="/add" method="POST">
  <div class="input-field">
    <input
      name="title"
      id="title"
      type="text"
      class="validate"
      value="{{data.title}}"
      required
    />
    <label for="title">
      Название
    </label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input
      value="{{data.price}}"
      name="price"
      id="price"
      type="text"
      class="validate"
      required
      min="10"
    />
    <label for="price">
      ЦЕНА
    </label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input
      value="{{data.img}}"
      name="img"
      id="img"
      type="text"
      class="validate"
      required
    />
    <label for="img">
      url картинки
    </label>
    <span class="helper-text" data-error="Введите url-картинки"></span>
  </div>
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <button class="btn btn-primary">
    Добавить
  </button>
</form>