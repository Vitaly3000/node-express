<h1>
  Профиль
</h1>
<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img class="avatar" src="/{{user.avatarUrl}}" alt="Аватар-{{user.name}}" />
    {{else}}
      <p>
        Аватара нету
      </p>
    {{/if}}
  </div>
  <div class="col s6">
    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p>
        Ваш e-mail:
        <strong>
          {{user.email}}
        </strong>
      </p>
      <div class="input-field">
        <input
          value="{{user.name}}"
          name="name"
          id="name"
          type="text"
          class="validate"
          required
          min="10"
        />
        <label for="name">
          Имя
        </label>
        <span class="helper-text" data-error="Введите имя"></span>
      </div>
      <div class="file-field input-field">
        <div class="btn">
          <span>
            Аватар
          </span>
          <input type="file" name="avatar" />
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" />
        </div>
      </div>
      <input type="hidden" name="_csrf" value="{{csrf}}" />
      <button type="submit" class="btn">
        Изменить
      </button>
    </form>
  </div>
</div>